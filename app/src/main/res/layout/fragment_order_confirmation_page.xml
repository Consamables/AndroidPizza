<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Pizza Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/pizza_type"
        android:textSize="16sp" />

    <TextView
        android:text="Price:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:id="@+id/price_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Your Order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:id="@+id/order_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|italic"
        android:fontFamily="sans-serif" />

    <TextView
        android:text="$0.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/default_price"
        android:layout_alignTop="@+id/price_label"
        android:layout_centerHorizontal="true"
        android:textSize="16sp" />

    <TextView
        android:text="Toppings:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pizza_type"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/topping_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="18sp" />

    <TextView
        android:text="None"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topping_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/topping_list"
        android:textSize="16sp" />

    <TextView
        android:text="Beverage:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topping_list"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:id="@+id/beverage_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="18sp" />

    <TextView
        android:text="None"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/beverage_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/chosen_beverage"
        android:textSize="16sp" />

</RelativeLayout>
